<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1E1E1E"
    tools:context=".Main_Dashboard_Activity">

    <TextView
        android:id="@+id/floraSenseText3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/delius_swash_caps_regular"
        android:text="Journal"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        android:padding="20dp"
        android:background="@drawable/rounded_gray_background_upsidedown"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageButton
        android:id="@+id/notificationsImageButton"
        android:layout_toRightOf="@id/floraSenseText3"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/circleplus_icon"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/floraSenseText3"/>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="20dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/floraSenseText3"
        app:layout_constraintBottom_toTopOf="@id/navigationBar">

        <LinearLayout
            android:id="@+id/scrollFeed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="20dp">

            <!-- Notes will be added here dynamically -->

        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/navigationBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_gray_background"
        app:layout_constraintBottom_toBottomOf="@id/main"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:padding="10dp"
            android:weightSum="5"
            android:layout_centerInParent="true">

            <ImageButton
                android:id="@+id/homeImageButton"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:layout_margin="25dp"
                android:background="@drawable/home_icon"
                android:layout_gravity="center"/>

            <ImageButton
                android:id="@+id/exploreImageButton"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:layout_margin="25dp"
                android:background="@drawable/explore_icon"
                android:layout_gravity="center"/>

            <ImageButton
                android:id="@+id/journalImageButton"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:layout_margin="25dp"
                android:background="@drawable/journal_icon"
                android:layout_gravity="center"/>

            <ImageButton
                android:id="@+id/bookmarkImageButton"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:layout_margin="25dp"
                android:background="@drawable/bookmark_icon"
                android:layout_gravity="center"/>

            <ImageButton
                android:id="@+id/userImageButton"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:layout_margin="25dp"
                android:background="@drawable/user_icon"
                android:layout_gravity="center"/>
        </LinearLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>